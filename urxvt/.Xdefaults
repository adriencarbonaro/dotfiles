!-------------------------------------------------------------------------------
! Xdefaults - X server settings
!
! Move this file to $HOME/.Xdefaults
!-------------------------------------------------------------------------------
! Author: Adrien CARBONARO
! dotfiles: www.github.com/adriencarbonaro/dotfiles
!-------------------------------------------------------------------------------

!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    227
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.depth:                32
URxvt.geometry:             90x30
!URxvt.transparent:          true
! URxvt*shading: 0 to 99 darkens, 101 to 200 lightens
!URxvt.shading: 		    88
!URxvt.fading:               0.50
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
!URxvt.saveLines:            50
URxvt.internalBorder:       40
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
URxvt*font: xft:Iosevka Term:pixelsize=21
!URxvt*font2: xft:FontAwesome:pixelsize=11
URxvt*boldFont: xft:Iosevka Term:style=Bold:pixelsize=21
!URxvt*boldFont: xft:Ubuntu Nerd Font:style=Bold:pixelsize=21
! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          chromium-browser

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #335555
URxv.cursorUnderline:      false

! Reproduce Ctrl + Arrows like other terminals
URxvt.keysym.Control-Down:        \033[1;3B
URxvt.keysym.Control-Up:          \033[1;3A
URxvt.keysym.Control-Left:        \033[1;3D
URxvt.keysym.Control-Right:       \033[1;3C

! Pointer
!URxvt.pointerBlank:         true

!!Source http://github.com/altercation/solarized

URxvt*background: #303539

*foreground: #ededed
!*fading: 40
*fadeColor: #002b36
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

!! black dark/light
*color0: #2E3436
*color8: #555753

!! red dark/light
*color1: #ff6666
*color9: #ff6666

!! green dark/light
*color2 : #4ee77f
*color10: #4ee77f

!! yellow dark/light
*color3 : #fce94f
*color11: #FCE94F

!! blue dark/light
*color4 : #448cb8
*color12: #448cb8

!! magenta dark/light
*color5 : #b387bf
*color13: #b387bf

!! cyan dark/light
*color6 : #35adb0
*color14: #25dadf

!! white dark/light
*color7 : #D3D7CF
*color15: #eeeeec


i3wm.color0: #FF0000
