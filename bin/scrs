#!/bin/sh

#-----------------------------------------------------------
# NAME         :  scrs
# AUTHOR       :  Adrien CARBONARO
# UPDATE       :  07/01/2019
# DESCRIPTION  :  Screenshot script with screen selection
# PARAMETERS   :  none
#-----------------------------------------------------------

scrot '%d-%m-%Y_%H%M_$wx$h.png' -e 'mv $f ~/shots/' -s
notify-send "Screenshot" "$(date "+%d-%m-%y %I:%M")" -i /home/adrien/dotfiles/icons/camera.png
