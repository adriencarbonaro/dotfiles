#------------------------------------------------------------
# GIT - Version manager
#
# This file sets the configuration for git command display
# Move this file to $HOME/.gitconfig
#------------------------------------------------------------
# Author:       Adrien CARBONARO
# Dotfiles :    www.github.com/adriencarbonaro/dotfiles.git
#------------------------------------------------------------

[color]
    pager       = true
    ui          = auto
    status      = auto
    diff        = auto
    branch      = auto
    showBranch  = auto
    interactive = auto
    grep        = auto
[color "status"]
    header    = black bold
    branch    = magenta
    nobranch  = red
    unmerged  = red
    untracked = red
    added     = green bold
    changed   = red bold
[color "diff"]
    meta       = black bold
    frag       = cyan bold
    func       = cyan
    old        = red
    new        = green
    commit     = blue
    whitespace = red
    context    = normal
[color "branch"]
    current  = magenta
    local    = magenta
    remote   = cyan
    upstream = cyan
    plain    = normal
[color "decorate"]
    branch = green
    remoteBranch = magenta
    tag = yellow
    stash = cyan
    HEAD = cyan
[color "interactive"]
    prompt = blue bold
    header = red bold
    error = red
    help = black bold
[color "grep"]
    context = normal
    match = cyan
    filename = blue
    function = blue
    selected = normal
    separator = red bold
    linenumber = normal
[alias]
    compactLog = log --graph --abbrev-commit --decorate --format=format:'%C(auto)%h%d %s %C(bold black)%an (%ar)'
    compactLogAll = log --graph --abbrev-commit --decorate --format=format:'%C(auto)%h%d %s %C(bold black)%an (%ar)' --all
    fullLog = log --graph --decorate --format=format:'%C(auto)%h%d %n %C(bold black)Author: %an <%ae> %n %C(bold black)Date:   %ad %n%n %s %n%n %b'
    fullLogAll = log --graph --decorate --format=format:'%C(auto)%h%d %n %C(bold black)Author: %an <%ae> %n %C(bold black)Date:   %ad %n%n %s %n%n %b' --all
